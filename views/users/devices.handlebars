<div>
    <div>
        <h1 class="device-title">Your Devices</h1>
    </div>
    {{#each allDevices}}
        <div class="card" style="width: 18rem;">
            <img src="/public/imgs/icons/{{icon}}" class="card-img-top" alt="{{deviceName}}">
            <div class="card-body">
                <h5 class="card-title">{{deviceName}}</h5>
                <p class="card-text">Room: {{room}}</p>
            </div>
            <div class="card-body">
                <a href="#" class="card-link">Device Details</a>
                <a href="#" class="card-link">Delete Device</a>
            </div>
        </div>
    {{/each}}
</div>